<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.groupedtut.activities.ParametreJabberActivity"
    style="@style/LinearLayoutBase"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ParamÃ¨tres JABBER"
        android:gravity="center"
        android:textSize="35sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="15dp" tools:targetApi="o">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login :"
                android:textColor="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/login_jabber"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:layout_marginLeft="70dp"
                android:hint="@string/hint_login_jabber"
                android:inputType="textNoSuggestions"
                android:textAlignment="center" android:layout_marginStart="70dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="15dp" tools:targetApi="o">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe :"
                android:textColor="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/mdp_jabber"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPassword"
                android:textAlignment="center" android:layout_marginStart="70dp" />
        </LinearLayout>

        <Button
            android:id="@+id/boutonConnexion"
            android:text="Connexion"
            style="@style/BoutonClassique"/>

        <TextView
            android:id="@+id/texteReponseJabber"
            style="@style/ReponseServeur"/>

    </LinearLayout>

</LinearLayout>