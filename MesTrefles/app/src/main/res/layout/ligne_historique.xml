<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="10dp">


     <TextView android:id="@+id/beneficiaire"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="N° 29"
        android:width="100dp"
        android:gravity="center"/>

    <TextView android:id="@+id/montant"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/montant"
        android:layout_below="@+id/montant"
        android:text="26 Trèfles"
        android:layout_alignStart="@+id/montant" />

    <TextView android:id="@+id/date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/date"
        android:layout_below="@+id/date"
        android:text="07/01/98"
        android:layout_alignStart="@+id/date" />

</LinearLayout>