<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gael.activities">

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.gael.activities.AccueilActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.example.gael.activities.MenuPrincipal"
            android:windowActionBar="false"
            android:windowNoTitle="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.example.gael.activities.TransactionActivity"
            android:label="@string/titreTransaction"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.example.gael.activities.AideActivity"
            android:label="@string/titreAide"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.example.gael.activities.RefusActivity"
            android:label="@string/titreRefus"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.example.gael.activities.SoldeActivity"
            android:label="@string/titreSolde"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.example.gael.activities.ParametresActivity"
            android:label="@string/titreParametres"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.example.gael.activities.DepenseActivity"
            android:label="@string/titreDepenses"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver android:name="com.example.gael.reception_sms.SmsBroadcastReceiver" android:exported="true" >
            <intent-filter android:priority="999" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

    </application>


</manifest>